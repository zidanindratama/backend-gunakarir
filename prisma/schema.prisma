generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  username String  @unique
  password String?
  imageUrl String?
  role     Role    @default(MAHASISWA)

  mahasiswa Mahasiswa?
  recruiter Recruiter?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mahasiswa {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @unique @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  namaLengkap String
  nim         String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Recruiter {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @unique @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  company         String
  contract        String
  NPWP            String  @unique
  status          Status  @default(PENDING)
  linkedin        String?
  rejectionReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  RECRUITER
  MAHASISWA
}

enum Status {
  APPROVED
  REJECTED
  PENDING
}
